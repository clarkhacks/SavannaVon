    <div class="columns is-centered is-vcentered">
      <div class="column is-6">
        <div class="" style="position: relative;">
          <img class="is-relative is-radius is-fullwidth is-object-cover"
            style="height: auto; max-height: 600px; z-index: 10;" src="{{image}}" alt=""></div>
      </div>
      <div class="column is-6">
        <div class="mb-6">
          <span class="tag is-info is-rounded">{{ page.date | date: '%B %d, %Y' }}</span>
          <h2 class="mt-4 title is-size-3">{{title}}</h2>
        </div>
        <div class="is-flex mb-6">
          <div>
            <p class="subtitle">{{desc}}</p>
            <p>
              {{content}}
            </p>
            <div id="disqus_thread"></div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
